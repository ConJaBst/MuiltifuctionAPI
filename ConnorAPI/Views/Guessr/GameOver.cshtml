@model IEnumerable<GameOverViewModel>
@{
    ViewData["Title"] = "Game Over";
    int totalScore = (int)ViewData["TotalScore"];
}

<!DOCTYPE html>
<html>
<head>
    <title>Game Over</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/GalnetContentStyle.css">
</head>
<body>
    <div class="content-container">
        <h1>Game Over</h1>
        <p>Your total score: <strong>@totalScore</strong></p>

        <table class="table">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Published Date</th>
                    <th>Your Guess</th>
                    <th>Points This Round</th>
                    <th>View Article</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var round in Model)
                {
                    <tr>
                        <td class="title-cell">@round.ArticleTitle</td>
                        <td>@round.PublishedDate.ToString("dd MMM yyyy")</td>
                        <td>@round.GuessedDate.ToString("dd MMM yyyy")</td>
                        <td>@round.RoundScore</td>
                        <td>
                            <a asp-controller="Galnet" asp-action="ViewContent" asp-route-id="@round.ArticleId" class="btn btn-secondary">View Article</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="centered">
            <a asp-action="Index" class="btn btn-primary">Back to Articles</a>
        </div>
    </div>

    <style>
        /* Background and font */
        body {
            background-image: url('/jpg/IndexBackground.jpg');
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Roboto', sans-serif;
            color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        /* Main container */
        .content-container {
            background-color: rgba(0, 0, 0, 0.8);
            padding: 30px;
            margin: 2% auto;
            width: 90%;
            max-width: 1200px;
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.5);
            overflow-x: auto;
        }

        /* Header */
        h1 {
            font-size: 2.5em;
            font-weight: 600;
            text-align: left;
            margin-bottom: 10px;
        }

        /* Table styling */
        .table {
            background-color: rgba(255, 255, 255, 0.1);
            color: #f0f0f0;
            margin-top: 8px;
            width: 100%;
            border-collapse: collapse;
            min-width: 600px;
        }

            /* Header styling */
            .table th {
                background-color: #333333;
                color: #f0f0f0;
                padding: 8px;
                white-space: nowrap;
            }

            /* Table cell styling */
            .table td {
                background-color: rgba(255, 255, 255, 0.05);
                color: #f0f0f0;
                padding: 8px;
                text-align: left;
                vertical-align: middle;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

                /* Title column */
                .table td.title-cell {
                    white-space: normal;
                    max-width: 300px;
                    text-align: left;
                    overflow: hidden;
                    text-overflow: ellipsis;
                }

            /* Hover effect */
            .table tbody tr:hover {
                background-color: #444444;
                color: #ffffff;
            }

        /* Centered container */
        .centered {
            text-align: left;
            margin-top: 10px;
        }

        /* Button styling */
        .btn-primary {
            margin: 0 5px;
            padding: 10px 20px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            margin: 0 5px;
            padding: 8px 16px;
            color: #fff;
            background-color: #6c757d;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

    </style>
</body>
</html>
