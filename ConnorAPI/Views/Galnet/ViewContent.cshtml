@model GalnetArticle

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap" rel="stylesheet">
    <style>
        /* Background image */
        body {
            background-image: url('/jpg/Background.jpg');
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Roboto', sans-serif;
            color: #f0f0f0;
        }

        /* Container */
        .content-container {
            background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent background */
            padding: 30px;
            margin: 5% auto;
            width: 80%;
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.5);
        }

        /* Title */
        .article-title {
            font-size: 2.5em;
            font-weight: bold;
            text-align: left;
            margin-bottom: 20px;
        }

        /* Date */
        .article-date {
            font-size: 1em;
            color: #c0c0c0;
            text-align: left;
            margin-bottom: 20px;
        }

        /* Content */
        .article-content {
            white-space: pre-line; /* Preserves new lines */
            font-size: 1.2em;
            line-height: 1.6;
        }

        /* Back button */
        .back-button {
            display: block;
            text-align: left
            margin-bottom: 20px;
            margin-top: 10px;
            
            
        .link-button {
            background: none;
            border: none;
            color: #007bff; /* Link color */
            text-decoration: underline;
            cursor: pointer;
            padding: 0;
            font-size: 1em;
            font-family: inherit;
        }

        .link-button:hover {
            color: #0056b3; /* Hover color */
        }
        }
    </style>
</head>
<body>
    <div class="content-container">
        <div class="back-button">
            <a asp-action="Index" class="link-button">Back to Articles</a>

        </div>
        <h1 class="article-title">@Model.Title</h1>
        <p class="article-date">@Model.Date.ToString("dd MMM yyyy")</p>
        <div class="article-content">@Html.Raw(Model.Content.Replace("\n", "<br><br>"))</div>

        
    </div>
</body>
</html>
