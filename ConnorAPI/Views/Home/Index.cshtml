<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    .home-container {
        text-align: center;
        padding: 50px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        max-width: 600px;
        margin: 50px auto;
    }

    .home-title {
        font-size: 2.5em;
        color: #007bff;
        margin-bottom: 20px;
    }

    .home-description {
        font-size: 1.2em;
        color: #666;
        margin-bottom: 30px;
    }

    .explore-button {
        font-size: 1.2em;
        padding: 10px 20px;
    }
</style>




@{
    ViewData["Title"] = "Home Page";
}

<div class="home-container">
    <h1 class="home-title">Welcome to Galnet Articles</h1>
    <p class="home-description">Explore the latest news, updates, and stories from the Elite Dangerous universe.</p>

    <a asp-controller="Galnet" asp-action="Index" class="btn btn-primary explore-button">Explore Articles</a>
</div>
